@model LojaModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Produto - Detalhes</h2>

                    <input asp-for="LojaId"/>
                    <div class="form-group">
                        <label class="control-label" asp-for="LojaNome"></label>
                        <input class="form-control col-5" asp-for="LojaNome" readonly="readonly"/>
                    </div>
                   <div class="form-group">
                    @if(@Model.ProdutoLoja.Count() > 0)
                    {
                        <p>
                            <br>
                            <br>
                            <br>
                            <br>
                        </p>
                        <h4 class="alert alert-dark">Lista de Produtos associados</h4>
                        <table class="table table-bordered">
                            <thead>
                             <tr>
                                <th>Nome da Produto</th>
                            </tr>
                            </thead>
                        

                        @foreach(var item in @Model.ProdutoLoja)
                        {   
                            <tbody>
                                <tr>
                                    <td>@item.Produto.ProdutoNome</td>
                                </tr>
                            </tbody>
                        }
                        </table>
                    }
                    else
                    {
                         <p>
                            <br>
                            <br>
                            <br>
                            <br>
                          </p>
                        <div class="alert alert-warning">
                            <h4>Não há Produtos associados!</h4>
                        </div>
                    }


                    </div>

                    <a  asp-controller="Loja" asp-action="Index" class="btn btn-primary btn-lg">Voltar</a>
            </div>
        </div>
    </div>
</div>

