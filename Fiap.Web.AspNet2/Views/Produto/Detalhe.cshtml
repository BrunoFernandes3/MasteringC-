@using Fiap.Web.AspNet2.Views.ViewModel
@model ProdutoModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Produto - Detalhes</h2>

                    <input asp-for="ProdutoId"/>
                    <div class="form-group">
                        <label class="control-label" asp-for="ProdutoNome"></label>
                        <input class="form-control col-5" asp-for="ProdutoNome" readonly="readonly"/>
                    </div>
                    <div class="form-group">
                   @if (@Model.ProdutoLoja.Count() > 0)
                            {
                        <p>
                            <br>
                            <br>
                            <br>
                            <br>
                        </p>
                        <h4 class="alert alert-dark">Lista de Lojas associados</h4>
                        <table class="table table-bordered">
                            <thead>
                             <tr>
                                <th>Id da Loja</th>
                                <th>Nome da Loja</th>
                            </tr>
                            </thead>
                        

                        @foreach(var item in @Model.ProdutoLoja)
                        {   
                            <tbody>
                                <tr>
                                    <td>@item.Loja.LojaId</td>
                                    <td>@item.Loja.LojaNome</td>
                                </tr>
                            </tbody>
                        }
                        </table>
                    }
                    else
                    {
                         <p>
                            <br>
                            <br>
                            <br>
                            <br>
                          </p>
                        <div class="alert alert-warning">
                            <h4>Não há Lojas associadas!</h4>
                        </div>
                    }
                    

                    </div>

                    <a  asp-controller="Produto" asp-action="Index" class="btn btn-primary btn-lg">Voltar</a>
            </div>
        </div>
    </div>
</div>

