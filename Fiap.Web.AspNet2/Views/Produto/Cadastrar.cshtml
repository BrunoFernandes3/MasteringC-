@using Fiap.Web.AspNet2.Views.ViewModel
@model ProdutoLojaViewModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Produto - Cadastrar</h2>

                <form asp-controller="Produto" asp-action="Cadastrar">

                    <div class="form-group">
                        <label class="control-label" asp-for="Produto.ProdutoNome"></label>
                        <input class="form-control col-5" asp-for="Produto.ProdutoNome"/>
                    </div>
                    
                    <div class="form-group">
                        @foreach(var item in @ViewBag.Lojas)
                        {
                            <input type="checkbox" value="@item.LojaId" name="LojaId" /> @item.LojaNome<br/>
                        }
                    </div>
                    <a asp-controller="Produto" asp-action="Index" class="btn btn-default btn-lg">Cancelar</a>

                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>

