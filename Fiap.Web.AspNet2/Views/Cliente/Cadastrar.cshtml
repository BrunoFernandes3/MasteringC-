@model ClienteModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Cadastrar</h2>

                <form asp-controller="Cliente" asp-action="Cadastrar">

                    <div class="form-group">
                        <label class="control-label" asp-for="Nome"></label>
                        <input class="form-control col-5" asp-for="Nome"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Email"></label>
                        <input class="form-control col-5" asp-for="Email" >
                    </div>
                    <div class="form-group">
                        <label class="contrzl-label">Representante</label>

                        <Select class="form-control col-5" asp-for="RepresentanteId">
                         <option>Selecione</option>
                         @foreach (var item in @ViewBag.Representantes)
                            {
                                <option value="@item.RepresentanteId">@item.NomeRepresentante</option>
                            }
                        </Select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="DataNascimento"></label>
                        <input class="form-control col-5" value="" asp-for="DataNascimento"/>

                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Observacao"></label>
                        <textarea class="form-control" rows="4" cols="100" asp-for="Observacao"></textarea>
                    </div>


                    <a asp-controller="Cliente" asp-action="Index" class="btn btn-default btn-lg">Cancelar</a>

                    <button type="submit" class="btn btn-primary btn-lg">Gravar</button>
                </form>
            </div>
        </div>
    </div>
</div>

