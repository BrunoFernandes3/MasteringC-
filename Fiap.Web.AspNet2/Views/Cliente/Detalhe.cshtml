@model ClienteModel
@{
}
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Detalhes</h2>

                    <input asp-for="ClienteId"/>
                    <div class="form-group">
                        <label class="control-label" asp-for="Nome"></label>
                        <input class="form-control col-5" asp-for="Nome" readonly="readonly"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Email"></label>
                        <input class="form-control col-5" asp-for="Email" readonly="readonly"/>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Representante</label>

                        <Select class="form-control col-5" disabled="" asp-for="RepresentanteId" asp-items="@ViewBag.Representantes">
                         <option>Selecione</option>    
                        </Select>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="DataNascimento"></label>
                        <input class="form-control col-5" asp-for="DataNascimento" readonly="readonly"/>
                        
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="Observacao"></label>
                        <textarea class="form-control" rows="4" cols="50" asp-for="Observacao" readonly="readonly"></textarea>
                    </div>

                    <a  asp-controller="Cliente" asp-action="Index" class="btn btn-primary btn-lg">Voltar</a>
            </div>
        </div>
    </div>
</div>

